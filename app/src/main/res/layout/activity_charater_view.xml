<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.rimapps.kotlintuts.CharaterViewActivity">

    <ImageView
        android:id="@+id/ivCharacterImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        tools:ignore="ContentDescription,MissingConstraints"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:src="@drawable/rickmorty"/>
    <TextView
        android:id="@+id/tvCharacterViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ivCharacterImageView"
        android:textColor="@color/characterName"
        android:text="@string/rick_sanchez"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCharacterImageView"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:padding="20dp"
        android:src="@drawable/rickmorty"/>

    <TextView
        android:id="@+id/tvCharacterStatusView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCharacterViewName"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:padding="5dp"
        android:text="@string/alive"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCharacterViewName"
        android:textColor="@color/statusA"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvCharacterGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="monospace"
        android:padding="5dp"
        android:text="@string/male"
        android:textColor="@color/genderM"
        app:layout_constraintLeft_toRightOf="@id/tvCharacterStatusView"
        app:layout_constraintTop_toBottomOf="@+id/tvCharacterViewName"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="ContentDescription" />
    <TextView
        android:id="@+id/tvCharacterSpecies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:padding="5dp"
        android:text="@string/alive"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCharacterGender"
        android:textColor="@color/species"
        android:textSize="25sp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        tools:ignore="ContentDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>