<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rimapps.kotlintuts">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/rickmorty"
        android:label="@string/app_name"
        android:roundIcon="@drawable/rickmorty"
        android:supportsRtl="true"
        android:theme="@style/Theme.KotlinTuts">
        <activity
            android:name=".CharaterViewActivity"
            android:exported="false"
            android:label="@string/title_activity_charater_view"
            android:theme="@style/Theme.KotlinTuts.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>